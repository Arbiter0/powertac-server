      <groupId>org.apache.commons</groupId>
      <artifactId>commons-math</artifactId>
      <version>2.2</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  
  <scm>
    <connection>scm:git:git//github.com/powertac/factored-customer.git</connection>
    <developerConnection>scm:git:git@github.com:powertac/factored-customer.git</developerConnection>
