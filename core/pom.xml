	</parent>

    <artifactId>core</artifactId>
    <version>0.0.1</version>
    <packaging>jar</packaging>

    <name>Server Core</name>
    <url>http://powertac.org</url>

    <repositories>
        <repository>
            <id>JBoss Repo</id>
            <url>http://repository.jboss.org/maven2</url>
